@page "/ArtikelDetails/{Id:int}"
@using LaliWebShop.Web.Helper
@using LaliWebShop.Web.ViewModels
@inherits ArtikelDetailsBase

@if(artikel==null && ErrorMessage == null)
{
   <Spinner/>
}
else if(ErrorMessage!= null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <EditForm OnValidSubmit="AddToWarenkorb_Button" Model="DetailsVM" method="post">
        <DataAnnotationsValidator/>
    <div class="card container mt-4">
        <div class="card-header ml-0  row">
            <div class="col-12 col-md-6">
                <h1 class="text-primary">@artikel.Name</h1>
            </div>

            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height:30px;">@artikel.Kategorie.Name</span>
            
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-10">
                       <p>@((MarkupString)artikel.Bezeichnung)</p>

                         <div class="col-2 bg-light text-center pt-2 m-2" style="border:3px solid #28A745; border-radius:2px;box-shadow:5px">
                                            <p>@artikel.PreisSingleNetto.ToString("c")</p>
                      </div>
                      <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Anzahl</h4></div>
                                <div class="col-10">
                                    <InputNumber @bind-Value="DetailsVM.Count" class="form-control" />
                                    <ValidationMessage For="()=>DetailsVM.Count"></ValidationMessage>
                                </div>
                                 </div>

                    </div>
                   
                     <div class="col-2">
                            <img src="@artikel.ImageURL" width="100%" class="rounded" />
                      </div>

                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " href="/">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                            <button type="submit" value="Add to Warenkorb" class="btn btn-primary form-control">In den Warenkorb</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>
}


