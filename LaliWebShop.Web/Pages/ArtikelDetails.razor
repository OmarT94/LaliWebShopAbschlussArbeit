@page "/ArtikelDetails/{Id:int}"
@inherits ArtikelDetailsBase

@if(artikel==null && ErrorMessage == null)
{
   <Spinner/>
}
else if(ErrorMessage!= null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Artikel Details</h3>
    <div class="row">
        <div class="col-md-6 mb-5" >
           <img class="img-fluid" src="@artikel.ImageURL">
        </div>
        <div class="col-md-6">
            <h3>@artikel.Name</h3> 
            <p class="mb-4">@artikel.Bezeichnung</p>
            <p class="mb-4">
                <b>
                    @artikel.PreisSingleNetto.ToString("C") &nbsp;(@artikel.Menge items in stück)
                </b>
            </p>
            <div>
                <button class="btn btn-success" @onclick="()=> (AddToWarenkorb_Button(new WarenkorbItemToAddDto{
                    WarenkorbId=FestProgrammiert.WarenkorbId,
                    ArtikelId=artikel.Id,
                    ArtikelMenge=1
                    }))"
                    ><b>in den Warenkorb</b></button>
            </div>
           
        </div>

    </div>
}


